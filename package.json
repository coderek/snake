{
    "name": "snake",
    "version": "1.0.0",
    "description": "snake game",
    "main": "index.js",
    "author": "zen1986@gmail.com",
    "license": "MIT",
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-plugin-transform-es2015-modules-systemjs": "^6.24.1",
        "babel-preset-env": "^1.6.1"
    },
    "scripts": {
        "build": "npx babel snake/**/*.js --out-dir build -s inline",
        "watch": "npx babel snake/**/*.js --watch --out-dir build -s inline",
		"server": "nodemon --legacy-watch server server/index.js",
        "start": "npm run build && npm run server"
    },
    "dependencies": {
        "eslint": "^4.13.1",
        "express": "^4.16.1",
        "nodemon": "^1.14.1",
        "systemjs": "^0.20.19"
    },
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		},
		"extends": "eslint:recommended",
		"parserOptions": {
			"sourceType": "module"
		},
		"rules": {
			"indent": [
				"error",
				4
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": 0
		},
		"globals": {
			"require": true,
			"console": true
		}
	}
}
